---
import ChevronRight from '../icons/ChevronRight.astro'

interface Props {
  date: string
  title: string
  company: string
  description: string
  link?: string
}

const { date, title, company, description, link } = Astro.props
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-[6.5px] border border-[#ca6702] dark:border-[#0a9396] bg-[#ca6702] dark:bg-[#0a9396]"
>
</div>
<time class="text-sm font-normal text-gray-700 dark:text-gray-300">
  {date}
</time>
<h3 class="text-xl font-bold text-[#ca6702] dark:text-[#0a9396] max-sm:text-lg">
  {title}
</h3>
<h4 class="text-lg font-semibold text-gray-800 dark:text-gray-200 max-sm:text-base">
  {company}
</h4>
<p class="text-pretty md:text-balance mt-2 text-base font-normal text-gray-700 dark:text-gray-300 max-sm:text-sm">
  {description}
</p>
{
  link && (
    <a
      href={link}
      target="_blank"
      class="text-base font-medium inline-flex items-center gap-1 text-[#ee9b00] dark:text-[#94d2bd] hover:text-[#ee9b00]/80 dark:hover:text-[#94d2bd]/80 max-sm:text-sm"
    >
      Saber m√°s
      <ChevronRight class="size-5 max-sm:size-4" />
    </a>
  )
}
