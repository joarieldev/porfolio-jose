---
import Project from './Project.astro'

const tags = {
  React: {
    name: 'React',
    class:
      'inline-flex gap-1 items-center text-xs font-normal text-gray-800 dark:text-white bg-sky-600/15 dark:bg-sky-600/40 px-2 py-1 rounded-full',
    icon: '/React.svg',
  },
  TailwindCss: {
    name: 'TailwindCSS',
    class:
      'inline-flex gap-1 items-center text-xs font-normal text-gray-800 dark:text-white bg-cyan-600/15 dark:bg-cyan-600/40 px-2 py-1 rounded-full',
    icon: '/TailwindCSS.svg',
  },
  Nextjs: {
    name: 'Nextjs',
    class:
      'inline-flex gap-1 items-center text-xs font-normal text-gray-800 dark:text-white bg-gray-600/15 dark:bg-gray-600/40 px-2 py-1 rounded-full',
    icon: '/Nextjs.svg',
  },
  MaterialUI: {
    name: 'MaterialUI',
    class:
      'inline-flex gap-1 items-center text-xs font-normal text-gray-800 dark:text-white bg-blue-600/15 dark:bg-blue-600/40 px-2 py-1 rounded-full',
    icon: '/MaterialUI.svg',
  }
}
const projects = [
  {
    title: 'Adoptar Mascotas',
    description:
      'Sitio Web para la adopciòn de mascotas. Mas de 5 especies para adoptar. Creada desde cero con React y Tailwind CSS.',
    link: 'https://adoptar-mascota.vercel.app/',
    github: 'https://github.com/josearidev/AdoptarMascota',
    image: '/projects/adoptar-mascota.webp',
    tags: [tags.React, tags.TailwindCss],
  },
  {
    title: 'Order Up',
    description:
      'Una aplicación web simple para la gestión de órdenes. Creada con Nextjs y Localstorage.',
    link: 'https://order-up-pi.vercel.app/',
    github: 'https://github.com/josearidev/order-up',
    image: '/projects/order-up.webp',
    tags: [tags.Nextjs, tags.TailwindCss, tags.MaterialUI],
  },
]
---

<article class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
  {projects.map((project) => <Project {...project} />)}
</article>
