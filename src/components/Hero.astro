      href="https://github.com/joarieldev"
      target="_blank"
      class="flex gap-2 items-center py-2 px-4 text-sm font-semibold rounded-lg border bg-gray-200 dark:bg-gray-800 text-gray-800 dark:text-gray-200 border-[#000000] dark:border-gray-500 hover:bg-[#000000]/20 dark:hover:bg-gray-500/40 transition max-sm:text-xs max-sm:font-medium"
    >
      <img src="/GitHub.svg" alt="git-hub logo" class="size-4" />
      GitHub
    </a>
  </div>
</article>

<script is:inline>
  const copyMail = async () => {
    const mailto = 'joariel17@gmail.com'
    const mail = document.getElementById('gmail')
    const mailCss = mail.style.cssText
    const mailElement = document.getElementById('gmail').innerHTML

    mail.classList.add('duration-500')

    await navigator.clipboard
      .writeText(mailto)
      .then(function () {
        mail.style.backgroundColor = 'rgba(47, 158, 68, .30)'
        mail.style.borderColor = 'rgba(47, 158, 68, 1)'
        mail.textContent = 'Copiado!'
        setTimeout(() => {
          mail.style.cssText = mailCss
          document.getElementById('gmail').innerHTML = mailElement
          setTimeout(() => {
            mail.classList.remove('duration-500')
          }, 1000)
        }, 1500)
      })
      .catch(function (error) {
        console.error('Error al copiar el valor al portapapeles: ' + error)
      })
  }
</script>
